<%= render 'shared/validerrors', obj: @user %>

<div class="row">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%=  f.label :username%>
            </div>
            <div class="col-sm-6">
                <%=  f.text_field :username, class: "form-control", placeholder: "Identifiant"%>
            </div>
        </div>
    
        
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%=  f.label :email%>
            </div>
            <div class="col-sm-6">
                <%=  f.text_field :email, class: "form-control", placeholder: "Email"%>
            </div>
        </div>
        
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%=  f.label :password%>
            </div>
            <div class="col-sm-6">
                <%=  f.password_field :password, class: "form-control", placeholder: "Mot de passe"%>
            </div>
        </div>
        
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit(@user.new_record? ? "Inscription" : "Enregistrer les modifications", class: "btn btn-default")%>
            </div>
        </div>
        
    
    <% end %>
</div>