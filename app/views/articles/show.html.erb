<div class="row">
    <div class="col-xs-offset-2 col-xs-10">
        <h2><%= @article.title %></h2>
        
        <div class="well col-xs-6">
            <%= @article.description %>
            
            <% if @article.user %>
                <div align="right">
                    Article par <%= gravatar_for @article.user, size: 35 %> <%= link_to @article.user.username, user_path(@article.user) %>
                </div>
            <% end %>
            <div class="article-actions">
                
                <% if logged_in? && current_user == @article.user %>
                    <%= link_to "Ã‰diter l'article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
                    <%= link_to "Supprimer l'article", article_path(@article), method: :delete, class: "btn btn-xs btn-danger" %>
                <% end %>
                <%= link_to "Retour aux articles", articles_path, class: "btn btn-xs btn-success" %>
            </div>
        </div>
    </div>
    
</div>